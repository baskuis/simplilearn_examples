<web-app>
    <display-name>Widget Store</display-name>
    <servlet>
        <servlet-name>desserts-servlet</servlet-name>
        <servlet-class>widgetstore.web.ShowProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vanilla</servlet-name>
        <servlet-class>web.MyGenericServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>robot-details</servlet-name>
        <servlet-class>widgetstore.web.RobotDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>desserts-servlet</servlet-name>
        <url-pattern>/desserts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>robot-details</servlet-name>
        <url-pattern>/robot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vanilla</servlet-name>
        <url-pattern>/vanilla</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>logging-filter</filter-name>
        <filter-class>widgetstore.web.LoggingFilter</filter-class>
        <init-param>
            <param-name>prefix</param-name>
            <param-value>Bananas are tasty</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>logging-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>need-permission</filter-name>
        <filter-class>web.NeedPermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>need-permission</filter-name>
        <url-pattern>/robot</url-pattern>
    </filter-mapping>
</web-app>